{
	"name": "Application Framework Studio Devcontainer",
	"build": {
		"dockerfile": "Dockerfile"
	},
    "features": {
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "customizations": {
        "jetbrains": {
            "plugins": [
                "lechuck.intellij-plugin.task"
            ],
            "backend": "pycharm"
		},
		"vscode": {
			"extensions": [
				"eamodio.gitlens"
			]
		}
    },
    "forwardPorts": [51164, 8083, 8080, 8842, 5173, 9000],
    "initializeCommand": "mkdir -p \"${HOME}/.pulumi\"",
    "mounts": [
        "source=${localEnv:HOME}/.pulumi,target=/home/vscode/.pulumi,type=bind"
    ]
}
